<%= ouverture %>
<% configurer_groupe_afficher(servlet_request) %>

	<h2> <%= "Liste des élèves du groupe #{@groupe.nom} [#{@groupe.total}]" %> </h2>
	<table border="1">
	<% @eleves.each do |eleve| %>
		<tr>
			<td><%= eleve.numero %></td>
			<td><%= eleve.niveau %></td>
			<td><%= eleve.nom %></td>
			<td><%= eleve.prenom %></td>
			<td><%= eleve.sexe%></td>
			<td><%= eleve.attributs.join(", ")%></td>
		</tr>	
	<% end %>	
	</table>
		
<%= fermeture %>