<%= ouverture %>
<% configurer_classe_index(servlet_request) %>

	<h2> Listes des classes : <%= @niveau %> </h2>
	<table border="1">
		<tr>
			<th> Nom</th>
			<th> Niveau</th>
			<th> Attribut</th>
			<th> Groupes permis</th>
			<th> Maximun d'élèves</th>
			<th> Nombre d'élèves</th>
			<th> Actions</th>
		</tr>
		<% @classes.each do |classe| %>
			<tr>
				<td><a href="afficher.rhtml?nom=<%= classe.nom %>"> <%= classe.nom %>  </a></td> 
				<td> <%= classe.niveau %> </td> 
				<td> <%= classe.attribut %> </td> 
				<td> <%= classe.groupes_permis_str %> </td> 
				<td> <%= classe.max_eleves %> </td> 
				<td> <%= classe.total %> </td> 
				<td> <a href="modifier.rhtml?nom=<%=classe.nom%>">Mod.</a></td>
			</tr>
		<% end %>	
	</table>
<%= fermeture %>