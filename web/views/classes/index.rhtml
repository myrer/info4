<html>
	<head><meta charset="UTF-8"></head>
	<body>
		<h1> Listes des classes - JDLM</h1>
		<table border="1">
			<tr>
				<th> Nom</th>
				<th> Niveau</th>
				<th> Maximun d'élèves</th>
				<th> Nombre d'élèves</th>
			</tr>
			<% Classe.tous.each do |classe| %>
				<tr>
					<td><a href="afficher.rhtml?nom=<%= classe.nom %>"> <%= classe.nom %>  </a></td> 
					<td> <%= classe.niveau %> </td> 
					<td> <%= classe.max_eleves %> </td> 
					<td> <%= classe.total %> </td> 
				</tr>
			<% end %>	
		</table>
	</body>
</html>