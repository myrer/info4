<html>
	<head>
		<meta charset="UTF-8">
	</head>
	
	<body>
		<h1> Liste des rÃ¨gles </h1>
		<table border="1">
		<tr>
			<th>Niveau</th>
			<th>Attribut</th>
			<th>Groupes permis</th>
		</tr>
		<% Regle.tous.sort{|a,b| a.niveau <=> b.niveau}.each do |regle| %>
			<tr>
				<td><%= regle.niveau %></td>
				<td><%= regle.attribut %></td>
				<td><%= regle.groupes_permis.collect{|x| x.nom}.join(", ") %></td>
			</tr>	
		<% end %>	
		</table>
	</body>
</html>